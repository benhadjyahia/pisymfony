    <div class="section small_pt pb_70">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="heading_s1 text-center">
                        <h2>Chosir votre salle</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="tab-style1">
                        <ul class="nav nav-tabs justify-content-center" role="tablist">
                            <li class="nav-item">

                            </li>
                            <li class="nav-item">

                            </li>

                        </ul>
                    </div>


                    <div>
                        {{ form_start(form) }}

                        <div class="form-row align-items-end" >
                            <div class="col">
                                {{ form_row(form.nomSalle) }}
                            </div>

                            <div class="col">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Rechercher</button>
                                </div>
                            </div>
                        </div>
                        {{ form_end(form) }}

                    </div>
                    {% for SalleSport in sallesS %}
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="arrival" role="tabpanel" aria-labelledby="arrival-tab">
                            <div class="row shop_container">
                                <div class="col-lg-3 col-md-4 col-6">
                                    <div class="product">
                                        <div class="salle_img">
                                            <a href="">
                                                <img height="250" width="250" src="{{asset ('images/salles/'~ SalleSport.imageName)}} ">
                                            </a>
                                            <div class="product_action_box">
                                                <ul class="list_none pr_action_btn">
                                                    <li class="add-to-cart"><a href="#"><i class="icon-basket-loaded"></i> Add To Cart</a></li>
                                                    <li><a href="" class=""><i class="icon-shuffle"></i></a></li>
                                                    <li><a href="{{ path('salle_detaille',{'id':SalleSport.id}) }}" class=""><i class="icon-magnifier-add"></i></a></li>
                                                    <li><a href="#"><i class="icon-heart"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product_price">
                                            <span class="price">{{ SalleSport.price }}DT</span>

                                            <div class="rating_wrap">
                                                <div class="rating">
                                                    <div class="product_rate" style="width:80%"></div>
                                                </div>
                                                <span class="rating_num">(21)</span>
                                            </div>
                                            <div class="pr_desc">
                                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus blandit massa enim. Nullam id varius nunc id varius nunc.</p>
                                            </div>
                                            <div class="pr_switch_wrap">
                                                <div class="product_color_switch">
                                                    <span class="active" data-color="#87554B"></span>
                                                    <span data-color="#333333"></span>
                                                    <span data-color="#DA323F"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>




  {% endfor %}
